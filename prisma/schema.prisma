// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  clerkId     String       @unique
  email       String       @unique
  firstName   String?
  lastName    String?
  imageUrl    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  books       Book[]
  collections Collection[]

  @@index([clerkId])
  @@index([email])
}

model Book {
  id            String   @id @default(uuid())
  userId        String
  title         String
  author        String
  isbn          String?
  genre         String?
  description   String?
  coverUrl      String?
  readingStatus String   @default("Want to Read") // "Want to Read" | "Currently Reading" | "Finished"
  rating        Int      @default(0)
  review        String?
  currentPage   Int?
  totalPages    Int?
  dateAdded     DateTime @default(now())
  dateFinished  DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  collections   BookCollection[]

  @@index([userId])
  @@index([title])
  @@index([author])
  @@index([readingStatus])
}

model Collection {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?
  color       String   @default("#8b6f47") // Hex color for the collection
  icon        String   @default("ðŸ“š") // Emoji icon
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  books       BookCollection[]

  @@unique([userId, name])
  @@index([userId])
}

model BookCollection {
  id           String     @id @default(uuid())
  bookId       String
  collectionId String
  addedAt      DateTime   @default(now())

  book         Book       @relation(fields: [bookId], references: [id], onDelete: Cascade)
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)

  @@unique([bookId, collectionId])
  @@index([bookId])
  @@index([collectionId])
}
